# Configuration de l'environnement React Native
# Copiez ce fichier vers .env et ajustez les valeurs selon votre environnement

# URL de l'API backend
API_URL=http://localhost:3000/api

# Clés pour le stockage sécurisé des tokens
JWT_KEY=auth_token
REFRESH_TOKEN_KEY=refresh_token

# Nom de l'application (utilisé pour le stockage sécurisé)
APP_NAME=FormationReactNative

# Mode debug (true/false)
DEBUG_MODE=true

# Configuration réseau
NETWORK_TIMEOUT=10000

# Configuration React Query
QUERY_STALE_TIME=300000
QUERY_CACHE_TIME=600000

# Configuration de l'upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# Configuration i18n
DEFAULT_LANGUAGE=fr
FALLBACK_LANGUAGE=en

# Configuration des tests
TEST_API_URL=http://localhost:3001/api
TEST_TIMEOUT=5000

