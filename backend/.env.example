JWT_ACCESS_TOKEN_EXPIRES_IN="15m"
JWT_REFRESH_TOKEN_EXPIRES_IN="7d"

# Server
PORT=3000
NODE_ENV="development"

# File Upload
UPLOAD_DEST="./uploads"
